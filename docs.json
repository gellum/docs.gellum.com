{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Gellum Docs",
  "colors": {
    "primary": "#006AFF",
    "light": "#067eff",
    "dark": "#0851c5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "development",
              "hola-mundo"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Planes",
          "href": "https://gellum.com/planes",
          "icon": "dollar-sign"
        },
        {
          "anchor": "Blog",
          "href": "https://gellum.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Contacto",
        "href": "https://gellum.com/contacto"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Gellum.com",
      "href": "https://gellum.com"
    }
  },
  "footer": {
    "socials": {
      "x-twitter": "https://x.com/gellum_com",
      "website": "https://gellum.com/blog"
    }
  }
}