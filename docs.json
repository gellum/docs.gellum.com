{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "willow",
    "name": "Documentación de Gellum",
    "colors": {
        "primary": "#006AFF",
        "light": "#067eff",
        "dark": "#0851c5"
    },
    "favicon": "/favicon.svg",
    "navigation": {
      "global": {
        "anchors": [
          {
            "anchor": "Gellum OpenSource",
            "icon": "osi",
            "hidden": true,
            "href": "https://gellum.com/opensource"
          }
        ]
      },
      "tabs": [
        {
          "tab": "Docs",
          "groups": [
            {
              "group": "Inicio",
              "pages": [
                "introduccion",
                "como-comprar",
                "estado-del-sistema"
              ]
            },
            {
              "group": "Correo Electrónico",
              "pages": [
                "email/registros",
                "email/webmail",
                "email/configurar-servidor",
                "email/reenvio",
                "email/limites-de-envio"
              ]
            },
            {
              "group": "Dominios",
              "pages": [
                "dominios/buscar-host-dns",
                "dominios/cloudflare-dns-host"
              ]
            },
            {
              "group": "Gellum Ecommerce",
              "pages": [
                "gellum-ecommerce/registro-cname",
                "gellum-ecommerce/gestion-de-pedidos",
                "gellum-ecommerce/gestion-de-productos"
              ]
            }
          ]
        },
        {
          "tab": "Legal",
          "pages": [
            "legal/terminos-y-condiciones",
            "legal/politicas-de-privacidad",
            "legal/politica-de-devolucion"
          ]
        },
        {
          "tab": "Plugins",
          "groups": [
            {
              "group": "Gellum Business Hours",
              "pages": [
                "plugins/gellum-business-hours/overview",
                "plugins/gellum-business-hours/installation",
                "plugins/gellum-business-hours/changelog"
              ]
            }
          ]
        }
      ]
    },
    "logo": {
        "light": "/logo/light.svg",
        "dark": "/logo/dark.svg"
    },
    "navbar": {
        "links": [
            {
                "label": "Contacto",
                "href": "https://gellum.com/contacto"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Mi cuenta",
            "href": "https://gellum.com/mi-cuenta"
        }
    },
    "footer": {
      "socials": {
        "website": "https://gellum.com/",
        "x-twitter": "https://x.com/gellum_com"
      }
    }
}